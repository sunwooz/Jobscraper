
<div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-8 col-xs-offset-2">

    <% if @jobs.any? %>
      <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    <% end %>

    <div class="row">
      <div class="col-xs-4">
        <% @jobs.each do |job| %>
          <div class="job-button" data-job="<%= job.content %>">
            <h1 id="<%= job.id %>" class="job-title">
              <%= raw job.company %>
            </h1>
          </div>
        <% end %>
      </div>

      <div class="col-xs-8" id="result">
        results
      </div>
    </div>
    

    <% if @jobs.any? %>
      <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    <% end %>

  </div>
</div>
